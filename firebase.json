{
  "hosting": [
    {
      "target": "landing",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "reuniaosemanal-zoom",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "reuniaosemanal-zoom",
          "destination": "/redirect-zoom.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "reuniaosemanal-zoom-atualizado",
          "destination": "/redirect-zoom.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        },
        {
          "source": "zoom",
          "destination": "/redirect-zoom.html"
        },
        {
          "source": "reuniaosemanal-youtube",
          "destination": "/redirect-yt.html"
        },
        {
          "source": "reuniaosemanal-live",
          "destination": "/redirect-yt.html"
        },
        {
          "source": "reuniaosemanal",
          "destination": "/redirect-yt.html"
        },
        {
          "source": "/doacoes{,/**}",
          "destination": "/doacoes/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "doacoesexito",
      "public": "dist-wolney",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [      
        {
          "source": "**",
          "destination": "/index.html"
        }      
      ]
    }
  ]
}
