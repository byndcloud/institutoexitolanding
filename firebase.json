{
  "hosting": [
    {
      "target": "landing",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "reuniaosemanal-zoom",
          "destination": "/zoom-redirect.html"
        },
        {
          "source": "/doacoes{,/**}",
          "destination": "/doacoes/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "doacoesexito",
      "public": "dist-wolney",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [      
        {
          "source": "**",
          "destination": "/index.html"
        }      
      ]
    }
  ]
}
